{
  "name": "forms-from-json",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.1.2",
    "@headlessui/react": "^1.2.0",
    "@heroicons/react": "^1.0.1",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.1",
    "clsx": "^1.1.1",
    "cross-env": "7.x",
    "lodash": "^4.17.21",
    "npm-run-all": "4.x",
    "postcss-cli": "8.x",
    "postcss-preset-env": "6.x",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "4.x"
  },
  "scripts": {
    "start": "run-p watch:css dev watch:storybook",
    "build": "run-s build:css build:react-scripts build:storybook",
    "compile": "tsc --build \"./tsconfig.json\"",
    "prebuild": "npx rimraf ./lib",
    "postbuild": "npx copyfiles -u 1 src/styles/index.css lib/",
    "dev": "run-s wait-for:css start:react-scripts",
    "test": "craco test",
    "jest": "jest -u src/**/*.spec.tsx",
    "build:css": "cross-env TAILWIND_MODE=build NODE_ENV=production postcss src/styles/tailwind.css -o src/styles/index.css",
    "watch:css": "cross-env TAILWIND_MODE=watch NODE_ENV=development postcss src/styles/tailwind.css -o src/styles/index.css --watch",
    "wait-for:css": "wait-on src/styles/index.css",
    "start:react-scripts": "BROWSER=none craco start",
    "build:react-scripts": "craco build",
    "build:storybook": "build-storybook -s public",
    "watch:storybook": "start-storybook -p 6006 -s public",
    "chromatic": "npx chromatic"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/node-logger": "^6.2.9",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "autoprefixer": "^9.8.6",
    "chromatic": "^5.8.3",
    "eslint-config-prettier": "^8.3.0",
    "postcss": "8.x",
    "prettier": "^2.3.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.1.2",
    "ts-node": "^10.0.0",
    "wait-on": "^5.3.0"
  }
}
