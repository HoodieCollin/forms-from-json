{
  "name": "forms-from-json",
  "version": "0.1.0",
  "dependencies": {
    "@craco/craco": "^6.1.2",
    "@headlessui/react": "^1.2.0",
    "@heroicons/react": "^1.0.1",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.1",
    "clsx": "^1.1.1",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "tailwindcss": "^2.1.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/node-logger": "^6.2.9",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/common-tags": "^1.8.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "autoprefixer": "^9.8.6",
    "chromatic": "^5.8.3",
    "common-tags": "^1.8.0",
    "copyfiles": "^2.4.1",
    "eslint-config-prettier": "^8.3.0",
    "npm-run-all": "4.x",
    "postcss": "^8.3.0",
    "postcss-cli": "8.x",
    "postcss-increase-specificity": "^0.6.0",
    "postcss-nested": "^5.0.5",
    "postcss-plugin-context": "^2.0.0",
    "postcss-preset-env": "6.x",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "4.x",
    "wait-on": "^5.3.0"
  },
  "scripts": {
    "prebuild": "npm run prestart",
    "prestart": "rimraf ./lib ./src/styles/forms-from-json.css",
    "build": "run-s build:css build:lib build:storybook",
    "develop": "run-s wait-for:css watch:storybook",
    "start": "run-p watch:css develop",
    "test": "craco test",
    "chromatic": "chromatic --exit-zero-on-changes",
    "build:css": "TAILWIND_MODE=build NODE_ENV=production postcss src/styles/tailwind.css -o src/styles/forms-from-json.css",
    "watch:css": "TAILWIND_MODE=watch NODE_ENV=development postcss src/styles/tailwind.css -o src/styles/forms-from-json.css --watch",
    "wait-for:css": "wait-on src/styles/forms-from-json.css",
    "postbuild:css": "copyfiles -u 1 src/styles/forms-from-json.css lib",
    "build:lib": "tsc --build ./tsconfig.json",
    "build:docs": "build-storybook -o docs-build",
    "build:storybook": "build-storybook -s public",
    "watch:storybook": "start-storybook -p 6006 -s public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "files": [
    "lib/**/*"
  ]
}
